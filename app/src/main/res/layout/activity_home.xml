<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="24dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:textSize="22sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnNativeVpn" android:text="VPN داخلی (Demo)"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnV2Ray" android:text="V2Ray (VLESS)"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnLogout" android:text="خروج"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp"/>
</LinearLayout>
